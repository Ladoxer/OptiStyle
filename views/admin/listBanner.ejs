<%- include('../partials/adminPartials/header.ejs') %>

<div class="container-fluid py-4">
  <a class="btn btn-success" href="/admin/addBanner">Add</a>
  <div class="row">
    <div class="col-12">
      <div class="card my-4">
        <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
          <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
            <h6 class="text-white text-capitalize ps-3">Table of Banner</h6>
          </div>
        </div>
        <div class="card-body px-0 pb-2">
          <div class="table-responsive p-0">
            <table class="table align-items-center mb-0">
              <thead>
                <tr>
                  <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Header</th>
                  <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Image</th>
                  <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">description</th>
                  <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Edit</th>
                  <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Option</th>
                </tr>
              </thead>
              <tbody>
              
                  <% 
                    if(banner.length>0){
                      for(let i=0;i<banner.length;i++){
                        %>
                        <tr>
                  <td class="text-center">
                    <div class="d-flex px-2 py-1">
                      <div>
                        <p class="font-semibold"><%=banner[i].heading %></p>
                      </div>
                    </div>
                  </td>
                  <td>
                    <div class="relative w-8 h-8 mr-3 rounded-full md:block">
                        <img style="width: 200px; height: 200px;"  class="object-cover w-full h-full rounded-full" src="/adminAsset/productImages/<%=banner[i].image%>" alt="s" loading="lazy">
                     </div>
                  </td>


                  <td class="text-center">
                    <p class="text-xs font-weight-bold mb-0"><%= banner[i].description %></p>
                  </td>
                  
                  
                  <td class="text-center ">
                    <a href="/admin/editBanner?id=<%= banner[i]._id %>" class="btn btn-success" data-toggle="tooltip" data-original-title="Edit banner">
                      Edit
                    </a>
                  </td>
                  <% if(banner[i].status==false){ %>
                    <td class="text-center ">
                    <a href="/admin/showBanner?id=<%= banner[i]._id %>" data-toggle="tooltip" data-original-title="Show banner"><button class="btn btn-success" onclick="return showconfirm(this)" >show</button>
                    </a>
                  </td>
                </tr>
                    <%
                }else{
                  %>

                  <td class="text-center ">
                    <a href="/admin/showBanner?id=<%= banner[i]._id %>" data-toggle="tooltip" data-original-title="Show banner"><button class="btn btn-danger" onclick="return showconfirm(this)" >hide</button>
                    </a>
                  </td>
                </tr>
                  <%
                }
                  
                        
                        
                      }
                    }else{
                      %>
                      <tr>
                        <td>
                    <p class="font-weight-bold mb-0">Banner not found</p>
                  </td>
                      </tr>
                      <%
                    }  
                  %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  function showconfirm(node){
    return confirm("Show this Banner?");
  }
  function hideconfirm(node){
    return confirm("Hide this Banner?");
  }
  
</script>

<%- include('../partials/adminPartials/footer.ejs') %>