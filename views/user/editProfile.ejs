<%- include('../partials/userPartials/header.ejs') %>

<!-- breadcrumb -->
<div class="container pt-lg-5">
  <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
    <a href="/" class="stext-109 cl8 hov-cl1 trans-04">
      Home
      <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
    </a>

    <span class="stext-109 cl4"> Edit Profile </span>
  </div>
</div>

<section class="ftco-section bg-light py-5">
  <div class="container">
    <div class="row">
      <div class="col-md-12 vw-100 ">
        <form action="" class="bg-white p-5 contact-form" method="post">
          <h2 class="my-3">Edit Profile</h2>
          <div class="form-group">
            <input type="text" class="form-control" name="name" id="name" value="<%= user.name %>" required>
            <p id="para1" style="color: red;"></p>
          </div>
          <div class="form-group">
            <input type="text" class="form-control" name="email" id="email" value="<%= user.email %>" readonly>
          </div>
          <div class="form-group">
            <input type="number" class="form-control" name="mobile" id="mobile" value="<%= user.mobile %>" required>
            <p id="para2" style="color: red;"></p>
          </div>
          
          <div class="form-group text-center">
            <input type="submit" onclick="show()" value="Register" class="btn btn-primary py-3 px-5">
          </div>
          <div class="text-center">
            <%
          if(typeof message != 'undefined'){
            %>
            <p style="color: green;"><%=message%></p>
            <%
          }
          %>
          </div>
        </form>
      
      </div>
    </div>
  </div>
</section>

<script>
  function show(){
    let input1 = document.getElementById('name').value.trim();
    let para1 = document.getElementById('para1');
    if(input1 === ''){
      para1.innerText = "Enter something";
    }
    let input2 = document.getElementById('mobile').value.trim();
    let para2 = document.getElementById('para2');
    if(input2 === ''){
      para2.innerText = "Enter something";
    }
  }  
</script>


